{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["nativewind/types"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "constants/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind.types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.types.d.ts"
  ]
}